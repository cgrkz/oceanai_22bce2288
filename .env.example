# AWS Bedrock Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1

# AWS Bedrock Model IDs
BEDROCK_LLM_MODEL_ID=amazon.nova-lite-v1:0
BEDROCK_EMBEDDING_MODEL_ID=cohere.embed-v4:0

# Application Configuration
APP_NAME=QA Agent - Test Case Generator
APP_VERSION=1.0.0
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Streamlit Configuration
STREAMLIT_PORT=8501

# Vector Database Configuration
VECTOR_DB_PATH=./vector_store
VECTOR_DB_COLLECTION_NAME=qa_documents

# Chunk Configuration for Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# LLM Configuration
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7
EMBEDDING_DIMENSIONS=1024

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/app.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=.md,.txt,.json,.pdf,.html,.docx,.doc

# Generated Files Configuration
GENERATED_TESTS_PATH=./generated_tests
GENERATED_SCRIPTS_PATH=./generated_tests/selenium_scripts

# Timeout Configuration (seconds)
BEDROCK_REQUEST_TIMEOUT=60
DOCUMENT_PROCESSING_TIMEOUT=300

