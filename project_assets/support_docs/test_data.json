  "test_scenarios": {
    "positive_scenarios": [
      {
        "scenario_id": "POS-001",
        "description": "Complete checkout with single item, no discount, standard shipping",
        "steps": [
          "Add Premium Laptop to cart",
          "Fill in valid customer information",
          "Select Standard Shipping (default)",
          "Select Credit Card (default)",
          "Click Pay Now"
        ],
        "expected_result": "Payment successful message displayed",
        "test_data": {
          "products": ["Premium Laptop"],
          "quantities": [1],
          "discount_code": null,
          "shipping": "standard",
          "payment": "credit-card",
          "expected_subtotal": 999.99,
          "expected_shipping": 0.00,
          "expected_total": 999.99
        }
      },
      {
        "scenario_id": "POS-002",
        "description": "Complete checkout with multiple items and valid discount code",
        "steps": [
          "Add Premium Laptop to cart",
          "Add Wireless Headphones to cart (quantity: 2)",
          "Apply discount code SAVE15",
          "Fill in valid customer information",
          "Select Express Shipping",
          "Select PayPal",
          "Click Pay Now"
        ],
        "expected_result": "Payment successful with correct discounted total",
        "test_data": {
          "products": ["Premium Laptop", "Wireless Headphones"],
          "quantities": [1, 2],
          "discount_code": "SAVE15",
          "shipping": "express",
          "payment": "paypal",
          "expected_subtotal": 1399.97,
          "expected_discount": 209.99,
          "expected_shipping": 10.00,
          "expected_total": 1199.98
        }
      },
      {
        "scenario_id": "POS-003",
        "description": "Apply discount code with case insensitivity",
        "steps": [
          "Add any product to cart",
          "Enter discount code 'save15' (lowercase)",
          "Click Apply Code"
        ],
        "expected_result": "Discount applied successfully",
        "test_data": {
          "discount_code_variants": ["SAVE15", "save15", "Save15", "sAvE15"],
          "expected_discount_percentage": 15
        }
      },
      {
        "scenario_id": "POS-004",
        "description": "Modify cart quantities and verify price updates",
        "steps": [
          "Add Wireless Headphones to cart",
          "Change quantity to 3",
          "Verify item total updates",
          "Verify cart total updates"
        ],
        "expected_result": "All prices update correctly in real-time",
        "test_data": {
          "product": "Wireless Headphones",
          "initial_quantity": 1,
          "updated_quantity": 3,
          "expected_item_total": 599.97
        }
      },
      {
        "scenario_id": "POS-005",
        "description": "Remove item from cart",
        "steps": [
          "Add Premium Laptop to cart",
          "Add Wireless Headphones to cart",
          "Click Remove on Wireless Headphones",
          "Verify only Laptop remains in cart"
        ],
        "expected_result": "Item removed, cart total updated",
        "test_data": {
          "initial_items": 2,
          "removed_item": "Wireless Headphones",
          "remaining_items": 1
        }
      }
    ],

    "negative_scenarios": [
      {
        "scenario_id": "NEG-001",
        "description": "Attempt checkout with empty cart",
        "steps": [
          "Ensure cart is empty",
          "Fill in valid customer information",
          "Click Pay Now"
        ],
        "expected_result": "Alert: 'Your cart is empty! Please add items before checking out.'",
        "test_data": {
          "cart_items": 0,
          "form_valid": true
        }
      },
      {
        "scenario_id": "NEG-002",
        "description": "Submit form with empty required fields",
        "steps": [
          "Add item to cart",
          "Leave name field empty",
          "Leave email field empty",
          "Leave address field empty",
          "Click Pay Now"
        ],
        "expected_result": "All three error messages displayed, form not submitted",
        "test_data": {
          "name": "",
          "email": "",
          "address": "",
          "expected_errors": ["Name is required", "Please enter a valid email address", "Address is required"]
        }
      },
      {
        "scenario_id": "NEG-003",
        "description": "Submit form with invalid email",
        "steps": [
          "Add item to cart",
          "Enter valid name",
          "Enter invalid email (e.g., 'notanemail')",
          "Enter valid address",
          "Click Pay Now"
        ],
        "expected_result": "Email error displayed, form not submitted",
        "test_data": {
          "name": "John Doe",
          "email": "notanemail",
          "address": "123 Main St, New York, NY 10001",
          "expected_error": "Please enter a valid email address"
        }
      },
      {
        "scenario_id": "NEG-004",
        "description": "Apply invalid discount code",
        "steps": [
          "Add item to cart",
          "Enter invalid discount code (e.g., 'INVALID')",
          "Click Apply Code"
        ],
        "expected_result": "Error message: '✗ Invalid discount code'",
        "test_data": {
          "discount_code": "INVALID",
          "expected_message": "✗ Invalid discount code",
          "discount_applied": false
        }
      },
      {
        "scenario_id": "NEG-005",
        "description": "Enter address that is too short",
        "steps": [
          "Add item to cart",
          "Enter valid name and email",
          "Enter address with less than 10 characters (e.g., 'Main St')",
          "Click Pay Now"
        ],
        "expected_result": "Address error displayed",
        "test_data": {
          "address": "Main St",
          "expected_error": "Address is required"
        }
      }
    ],

    "edge_case_scenarios": [
      {
        "scenario_id": "EDGE-001",
        "description": "Change shipping method after discount applied",
        "steps": [
          "Add item to cart",
          "Apply discount code SAVE15",
          "Verify discount applied to subtotal",
          "Change from Standard to Express shipping",
          "Verify shipping cost added but discount unchanged"
        ],
        "expected_result": "Discount remains on subtotal, shipping added separately",
        "test_data": {
          "subtotal": 999.99,
          "discount_percentage": 15,
          "discount_amount": 149.99,
          "standard_shipping": 0.00,
          "express_shipping": 10.00,
          "total_with_standard": 850.00,
          "total_with_express": 860.00
        }
      },
      {
        "scenario_id": "EDGE-002",
        "description": "Add items after discount code applied",
        "steps": [
          "Add Premium Laptop to cart ($999.99)",
          "Apply discount code SAVE15",
          "Verify discount amount ($150.00)",
          "Add Wireless Headphones to cart ($199.99)",
          "Verify discount recalculated on new subtotal"
        ],
        "expected_result": "Discount percentage stays 15%, but amount increases",
        "test_data": {
          "initial_subtotal": 999.99,
          "initial_discount": 150.00,
          "new_subtotal": 1199.98,
          "new_discount": 180.00
        }
      },
      {
        "scenario_id": "EDGE-003",
        "description": "Real-time validation on form fields",
        "steps": [
          "Enter invalid email",
          "Click Pay Now (error appears)",
          "Start typing correct email",
          "Verify error disappears while typing"
        ],
        "expected_result": "Error clears as user corrects the field",
        "test_data": {
          "initial_value": "notanemail",
          "corrected_value": "user@example.com",
          "error_clears": true
        }
      },
      {
        "scenario_id": "EDGE-004",
        "description": "Multiple discount code attempts",
        "steps": [
          "Apply valid code SAVE15",
          "Verify discount applied",
          "Apply another valid code SUMMER20",
          "Verify new discount replaces old one"
        ],
        "expected_result": "Only one discount active (latest valid code)",
        "test_data": {
          "first_code": "SAVE15",
          "first_discount": 15,
          "second_code": "SUMMER20",
          "second_discount": 20,
          "active_discount": 20
        }
      },
      {
        "scenario_id": "EDGE-005",
        "description": "Very large quantity in cart",
        "steps": [
          "Add Wireless Headphones to cart",
          "Change quantity to 100",
          "Verify calculations correct"
        ],
        "expected_result": "Cart handles large quantities correctly",
        "test_data": {
          "product_price": 199.99,
          "quantity": 100,
          "expected_subtotal": 19999.00
        }
      }
    ]
  },

